<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.xwiki.commons</groupId>
    <artifactId>xwiki-commons-pom</artifactId>
    <version>6.4.1</version>
  </parent>
  <groupId>org.xwiki.contrib</groupId>
  <artifactId>application-flashmessages-pom</artifactId>
  <version>1.1.4-SNAPSHOT</version>
  <name>Flash Messages Application</name>
  <packaging>pom</packaging>
  <description>Allow you to create Flash messages aiming at one or multiple local groups</description>
  <properties>
    <platform.version>${commons.version}</platform.version>
    <rendering.version>${commons.version}</rendering.version>
  </properties>
  <modules>
    <module>application-flashmessages-ui</module>
  </modules>
  <profiles>
    <profile>
      <id>integration-tests</id>
      <modules>
        <module>application-flashmessages-test</module>
      </modules>
    </profile>
  </profiles>
  <scm>
    <connection>scm:git:git://github.com/xwiki-contrib/application-flashmessages.git</connection>
    <developerConnection>scm:git:git@github.com:xwiki-contrib/application-flashmessages.git</developerConnection>
    <url>https://github.com/xwiki-contrib/application-flashmessages</url>
    <tag>HEAD</tag>
  </scm>
  <developers>
    <developer>
      <id>vrachieru</id>
      <name>Victor Rachieru</name>
    </developer>
    <developer>
      <id>gdelhumeau</id>
      <name>Guillaume Delhumeau</name>
    </developer>
    <developer>
      <id>DjeblounSidali</id>
      <name>Sidali Djebloun</name>
    </developer>
  </developers>
  <distributionManagement>
    <repository>
      <id>xwiki-staging</id>
      <name>XWiki Staging Repository</name>
      <url>http://nexus.xwiki.org/nexus/service/local/staging/deploy/maven2/</url>
    </repository>
  </distributionManagement>
</project>
